{
  "name": "headlamp",
  "version": "0.1.32",
  "description": "Coverage-first, runner-agnostic test UX CLI for Jest",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist-types/index.d.ts",
  "bin": {
    "headlamp": "dist/cli.cjs"
  },
  "files": [
    "dist",
    "dist-types",
    "scripts"
  ],
  "scripts": {
    "build": "node ./scripts/build.mjs",
    "postinstall": "node ./scripts/postinstall.mjs",
    "prepublishOnly": "npm run build",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "release": "npm publish --access public",
    "build:yalc": "npm run build && npx yalc publish --push && node ./scripts/print-publish-log.mjs",
    "dev:yalc": "nodemon -w src -w src/jest -e ts,tsx,js,jsx,cjs -d 300ms -x \"npm run build:yalc\""
  },
  "keywords": [
    "testing",
    "coverage",
    "jest",
    "vitest",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dbpiper/headlamp.git"
  },
  "bugs": {
    "url": "https://github.com/dbpiper/headlamp/issues"
  },
  "homepage": "https://github.com/dbpiper/headlamp#readme",
  "dependencies": {
    "c12": "^3.2.0",
    "es-toolkit": "^1.7.2",
    "istanbul-lib-coverage": "^3.2.2",
    "istanbul-lib-report": "^3.0.1",
    "istanbul-reports": "^3.1.7",
    "json5": "^2.2.3",
    "picomatch": "^4.0.3"
  },
  "peerDependencies": {
    "jest": "*",
    "vitest": "*"
  },
  "devDependencies": {
    "@types/istanbul-reports": "^3.0.4",
    "@types/picomatch": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "esbuild": "^0.21.5",
    "eslint": "8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node-import": "^1.0.5",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.3.3",
    "tslib": "^2.6.3",
    "typescript": "^5.5.4",
    "yalc": "^1.0.0-pre.53"
  }
}
